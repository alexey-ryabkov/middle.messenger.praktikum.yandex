{
  "name": "yapracticmessenger",
  "version": "1.0.0",
  "description": "",
  "author": "Alexey Ryabkov",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && node ./server.js",
    "build": "webpack --mode=production --define-process-env-node-env=production",
    "build:dev": "webpack --mode=development",    
    "dev": "webpack serve --open && npm run watch",
    "watch": "webpack --watch",
    "clean": "rm -rf node_modules/",

    "start:parcel": "npm run build:parcel && node ./server.js",
    "build:parcel": "parcel build ./src/index-parcel.htm --dist-dir ./dist-parcel",
    "dev:parcel": "parcel ./src/index-parcel.html --dist-dir ./dist-parcel --no-cache",

    "lint": "npm-run-all --parallel lint:scss lint:ts",
    "lint:ts": "node_modules/.bin/eslint --ext .ts ./src",
    "lint:scss": "npx stylelint './src/**/*.scss'",
    "lint:scss-fix": "npx stylelint './src/**/*.scss' --fix"
  },  
  "devDependencies": {
    "@parcel/transformer-sass": "2.7.0",
    "@parcel/validator-typescript": "2.7.0",
    "@types/mocha": "10.0.1",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.7.2",
    "eslint": "8.26.0",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.2",
    "mini-css-extract-plugin": "2.7.2",
    "mocha": "10.1.0",
    "npm-run-all": "4.1.5",
    "parcel": "2.7.0",
    "parcel-resolver-tspaths": "0.0.9",
    "sass-loader": "13.2.0",
    "style-loader": "3.3.1",
    "stylelint": "14.14.0",
    "stylelint-config-sass-guidelines": "9.0.1",
    "ts-loader": "9.4.2",
    "ts-mocha": "10.0.0",
    "tsconfig-paths-webpack-plugin": "4.0.0",
    "typescript": "4.8.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "dependencies": {
    "express": "4.18.2",
    "uuid": "9.0.0"
  }
}
